@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <title>Estude Com Evelyn</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Metadados -->
    <meta name="csrf-token" content="@Antiforgery.GetTokens(Context).RequestToken" />

    <!-- Dependências CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&family=Quicksand:wght@300;400;500;600;700&family=Cormorant+Garamond:wght@300;400;500;600;700&family=Caveat:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Seus CSS locais -->
    <link href="~/layout/assets/icons/phosphor/styles.min.css" rel="stylesheet" />
    <link href="~/css/admin_application.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="admin-layout">
        <!-- Overlay -->
        <div class="sidebar-overlay" id="sidebar-overlay"></div>

        <!-- Sidebar -->
        @Html.Partial("Sidebar/Sidebar")

        <!-- Main content -->
        <main class="main-content">
            <!-- Navbar -->
            @Html.Partial("Navbar/Navbar")

            <!-- Conteúdo principal -->
            <div class="content">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/layout/assets/js/sidebar.js"></script> <!-- se quiser separar esse JS num arquivo -->

    <script>
        // Conteúdo JS igual ao que você postou no Rails
        // (o mesmo código JS que lida com sidebar, ripple effect, etc.)
        // → Pode ser copiado como está, ou movido para um arquivo .js no wwwroot
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
