@model IEnumerable<Evento>

@{
    ViewData["Title"] = "Eventos";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="card-title">Eventos</h2>
        <div>
            <a asp-action="Create" class="btn btn-sm btn-primary">
                <i class="lucide-plus-circle"></i> Incluir
            </a>
        </div>
    </div>

    <!-- Tabela de Eventos -->
    <div class="card-body">
        <div class="table-responsive" style="height: 400px; overflow-y: auto;">
            <table class="table table-sm table-bordered table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                        <th>@Html.DisplayNameFor(model => model.DataHora)</th>
                        <th>@Html.DisplayNameFor(model => model.Conteudo)</th>
                        <th>@Html.DisplayNameFor(model => model.Local)</th>
                        <th>@Html.DisplayNameFor(model => model.Meta)</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                            <td>@Html.DisplayFor(modelItem => item.DataHora)</td>
                            <td>@Html.DisplayFor(modelItem => item.Conteudo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Local)</td>
                            <td>@Html.DisplayFor(modelItem => item.Meta)</td>
                            <td class="text-center">
                                <div class="dropdown">
                                    <a href="#" class="dropdown-toggle text-body" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="ph-gear"></i>
                                    </a>
                                    <div class="dropdown-menu">
                                        <div class="dropdown-header">Opções</div>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="dropdown-item">
                                            <i class="ph-pen me-2"></i> Editar
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="dropdown-item">
                                            <i class="ph-info me-2"></i> Detalhes
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item text-danger">
                                            <i class="ph-trash-simple me-2"></i> Excluir
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Rodapé do card -->
    <div class="card-footer text-muted">
        <!-- Paginação futura aqui -->
    </div>
</div>

<style>
    .table-responsive {
        height: 400px;
        overflow-y: auto;
    }
</style>
